#include <iostream>
#include <string>
using namespace std;

class G{
	public:
		void setmess(string name){
			cname=name;
		}
		int year(int b){
			if (0<b && b<20){
				y=b;
				return 0;
			}
			else{
				cout <<"年齡錯誤，請重新輸入" <<endl;
				return 1;
			}
		}
		string mess()const{
			return cname;
		}
		int dog() const{
			return y;
		}
		void dis() const{
			cout << "welcome to for" << mess() << "!" << dog() <<endl;
		}
	private:
		string cname;
		int y;
};
int main()
{   
    string a;
    int year;
    G my;
    cout << "\n請輸入狗的名字" <<my.mess()<<endl;
    getline(cin,a);
    my.setmess(a);
    cout << "\n請輸入狗的歲數" << endl; 
    cin >> year;
    while(my.year(year)==1){
    	cin >> year;
	}
    cout << endl;
	my.dis();
} 
