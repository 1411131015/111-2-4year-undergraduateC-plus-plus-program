#include <iostream>
#include <string>
#include "pet.h"
using namespace std;

pet::pet(string name,int age) : birthday(Date(2023, 5, 27))                         //設定狗狗名字副程式
{
    setdogname(name, age);
}


pet:: ~pet() {
    cout << "bye bye！" << endl;
}


void pet::setdogname(string name, int age)                         //設定狗狗名字副程式
{
    dogname = name;
    dogage = age;
    birthday.setDate(2021, 1, 20);
}



/*void pet::setdogage(int age)                              //設定狗狗年齡副程式
{
    while (age > 20) {
        cout << "Please enter again" << endl;
        cin >> age;
    }
    dogage = age;
}
*/


string pet::getdogname() const                            //取得狗狗名字副程式
{
    return dogname;
}



int pet::getdogage() const                                //取得狗狗年齡副程式
{
    return dogage;
}


void pet::displaymessage() const                          //列印最終結果副程式
{
    cout << "The dog name is ： " << getdogname() << "  age is：" << getdogage() << endl;
    cout << "The dog birthday is：";
    birthday.printDate();
}
