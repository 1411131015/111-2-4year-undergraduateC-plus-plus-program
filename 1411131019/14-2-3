#include <iostream>
#include <iomanip>
#include <stdexcept>
#include <string>
#include "pet.h"
using namespace std;

pet::pet(string name)                         //設定狗狗名字副程式
{
    dogname = name;
}


pet:: ~pet() {
    cout << "bye bye！" << endl;
}


void pet::setdogname(string name)                         //設定狗狗名字副程式
{
    dogname = name;
}



void pet::setdogage(int age)                              //設定狗狗年齡副程式
{
    while (age > 20) {
        cout << "Please enter again" << endl;
        cin >> age;
    }
    dogage = age;
}

void pet::setdogbirth(int y, int m, int d)
{
    year = y;
    month = m;
    day = d;
}

string pet::getdogname() const                            //取得狗狗名字副程式
{
    return dogname;
}



int pet::getdogage() const                                //取得狗狗年齡副程式
{
    return dogage;
}

int pet::getdogyear() const                                
{
    return year;
}

int pet::getdogmonth() const
{
    return month;
}

int pet::getdogday() const
{
    return day;
}


void pet::displaymessage() const                          //列印最終結果副程式
{
    cout << "The dog name is  " << getdogname() << "  age is：" << getdogage() <<endl;
    cout <<getdogyear() << "/"<< getdogmonth() << "/" << getdogday();
}
