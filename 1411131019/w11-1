#include <iostream>
using namespace std;

void cube(int &);
float cyclinder(int &,int &);
int volume(int &,int &,int &);

int main() {
	
	int x,y,z;
	cout<<"\n輸入正方體邊長：";
	cin>>x;
	cube(x);
	cout<<"體積為："<<x<<endl; 
	
	cout<<"\n輸入圓柱半徑：";
	cin>>x;
	cout<<"\n輸入圓柱高：";
	cin>>y;
	cout<<"體積為："<<cyclinder(x,y)<<endl; 
	
	cout<<"\n輸入長方體的長：";
	cin>>x;
	cout<<"\n輸入長方體的寬：";
	cin>>y;
	cout<<"\n輸入長方體的高：";
	cin>>z;
	cout<<"體積為："<<volume(x,y,z)<<endl;
}

void cube(int &x){
	x=x*x*x;
}

float cyclinder(int &x,int &y){
	return x*x*3.14159*y;
}

int volume(int &x,int &y,int &z){
	return x*y*z;
}



上課練習
#include <iostream>
using namespace std;

void cube(int&);
void cyclinder(int&, int&);
void volume(int&, int&, int&);

int main() {

	int x, y, z;
	cout << "\n輸入正方體邊長：";
	cin >> x;
	cube(x);
	cout << "體積為：" << x << endl;

	cout << "\n輸入圓柱半徑：";
	cin >> x;
	cout << "\n輸入圓柱高：";
	cin >> y;
	cyclinder(x, y);
	cout << "體積為：" << x << endl;

	cout << "\n輸入長方體的長：";
	cin >> x;
	cout << "\n輸入長方體的寬：";
	cin >> y;
	cout << "\n輸入長方體的高：";
	cin >> z;
	volume(x, y, z);
	cout << "體積為：" << x << endl;
}

void cube(int& x) {
	x = x * x * x;
}

void cyclinder(int& x, int& y) {
	x= x * x * 3.14159 * y;
}

void volume(int& x, int& y, int& z) {
	x= x * y * z;
}
