#include <iostream>
#include <string>
using namespace std;

class gradebook
{
public:
    void setdogname(string name);                        //設定狗狗名字副程式
    
    void setdogage(int age);                             //設定狗狗年齡副程式
   
    string getdogname();                            //取得狗狗名字副程式
   
    int getdogage();                                     //取得狗狗年齡副程式
   

    void displaymessage();                         //列印最終結果副程式
    
private:
    string dogname;
    int dogage;
};
